<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ivan.geotruck.activities.SettingsActivity">



        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/textBaseColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:text="@string/textView_infoUsuario"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:background="@color/textBaseColor" />


                <TextView
                    android:id="@+id/tv_cambiarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:text="@string/textView_cambiarUsuario"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/tv_usuarioActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_usuarioActual"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:background="#c0c0c0" />


                <TextView
                    android:id="@+id/tv_cambiarPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:text="@string/textView_cambiarPassword"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <TextView
                    android:id="@+id/tv_passwordActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_passwordActual"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:background="#c0c0c0" />


                <TextView
                    android:id="@+id/tv_cambiarEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:text="@string/textView_cambiarEmail"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/tv_emailActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_emailActual"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
                    android:background="#c0c0c0" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



                <TextView
                    android:id="@+id/tv_empresaActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_empresaActual"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_margin="@dimen/abc_action_bar_content_inset_material" />

                <TextView
                    android:id="@+id/tv_empresaUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>




                <TextView
                    android:id="@+id/tv_registradoDesde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_registrado"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_margin="@dimen/abc_action_bar_content_inset_material" />

                <TextView
                    android:id="@+id/tv_registradoDesdeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_margin="@dimen/abc_action_bar_content_inset_material"/>


        </LinearLayout>


</LinearLayout>
