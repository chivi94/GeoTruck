<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_nombreUsuario"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tv_telefono_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_telefonoUsuario"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_action_forward"
                android:layout_margin="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>