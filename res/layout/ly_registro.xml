<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_titulo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_formulario"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:text="@string/textView_tipoUsuario"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace"
            android:layout_margin="@dimen/abc_action_bar_content_inset_material" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_tipo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_tipos_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_jefe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/radioButton_jefe" />

            <RadioButton
                android:id="@+id/rb_transportista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/radioButton_conductor" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_siguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="@string/button_siguiente"
            android:textColor="@color/buttonTextColor" />
    </LinearLayout>
</LinearLayout>

